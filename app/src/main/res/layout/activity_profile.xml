<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/android"
                android:layout_width="120dp"
                android:layout_height="120dp">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/nameText"
                android:text="MD. Sifat"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_email"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="sifat@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_gender"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/genderText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_date"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="1/4/2021"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_time"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="9.30 PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_blood"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/bloodText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="B+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_skills"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/skillsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="Bangla English"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>